package com.reasturant;

import java.util.List;
import java.util.Scanner;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;
import org.hibernate.query.Query;

public class App {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        Configuration cfg = new Configuration().configure();
        SessionFactory factory = cfg.buildSessionFactory();

        while (true) {

            System.out.println("\n===== Restaurant Management System =====");
            System.out.println("1. Add Menu Item");
            System.out.println("2. View All Items");
            System.out.println("3. Update Price");
            System.out.println("4. Delete Item");
            System.out.println("5. Exit");

            System.out.print("Enter choice: ");
            int choice = sc.nextInt();

            switch (choice) {

                // ✅ ADD
                case 1:
                    sc.nextLine();

                    System.out.print("Enter Name: ");
                    String name = sc.nextLine();

                    System.out.print("Enter Price: ");
                    double price = sc.nextDouble();

                    sc.nextLine();

                    System.out.print("Enter Category: ");
                    String category = sc.nextLine();

                    System.out.print("Available (true/false): ");
                    boolean available = sc.nextBoolean();

                    Session session1 = factory.openSession();
                    Transaction tx1 = session1.beginTransaction();

                    MenuItem item = new MenuItem(name, price, category, available);
                    session1.persist(item);

                    tx1.commit();
                    session1.close();

                    System.out.println("Menu Item Added Successfully!");
                    break;

                // ✅ VIEW ALL (HQL)
                case 2:

                    Session session2 = factory.openSession();

                    Query<MenuItem> query =
                            session2.createQuery("from MenuItem", MenuItem.class);

                    List<MenuItem> list = query.list();

                    if (list.isEmpty()) {
                        System.out.println("No items found!");
                    } else {
                        for (MenuItem m : list) {
                            System.out.println(m);
                        }
                    }

                    session2.close();
                    break;

                // ✅ UPDATE PRICE
                case 3:

                    System.out.print("Enter Item ID: ");
                    int idToUpdate = sc.nextInt();

                    System.out.print("Enter New Price: ");
                    double newPrice = sc.nextDouble();

                    Session session3 = factory.openSession();
                    Transaction tx3 = session3.beginTransaction();

                    MenuItem updateItem = session3.get(MenuItem.class, idToUpdate);

                    if (updateItem != null) {
                        updateItem.setPrice(newPrice);
                        tx3.commit();
                        System.out.println("Price Updated Successfully!");
                    } else {
                        System.out.println("Item Not Found!");
                    }

                    session3.close();
                    break;

                // ✅ DELETE
                case 4:

                    System.out.print("Enter Item ID: ");
                    int idToDelete = sc.nextInt();

                    Session session4 = factory.openSession();
                    Transaction tx4 = session4.beginTransaction();

                    MenuItem deleteItem = session4.get(MenuItem.class, idToDelete);

                    if (deleteItem != null) {
                        session4.remove(deleteItem);
                        tx4.commit();
                        System.out.println("Item Deleted Successfully!");
                    } else {
                        System.out.println("Item Not Found!");
                    }

                    session4.close();
                    break;

                case 5:
                    factory.close();
                    sc.close();
                    System.out.println("Exiting...");
                    return;

                default:
                    System.out.println("Invalid Choice!");
            }
        }
    }
}